<CameraDetectionScreen>:
    name: 'camera_detection_screen'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: detection_window_label
            text: "Camera Detection Screen"
        Image:
            id: camera_frame
            source: ''  # This will be updated with the camera feed
        Label:
            id: visibility_label
            text: "Can you see the camera feed?"
            size_hint_y: None
            height: '40dp'
        BoxLayout:
            size_hint_y: None
            height: '40dp'
            Button:
                text: "Yes"
                on_press: root.on_yes()
            Button:
                text: "No"
                on_press: root.on_no()

<EnrollmentScreen>:
    name: 'enrollment'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Enrollment Screen"

<VerificationScreen>:
    name: 'verification'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Verification Screen"